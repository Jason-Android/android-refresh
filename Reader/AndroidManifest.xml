<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="jason.kang.reader"
      android:versionCode="1"
      android:versionName="1.0">
    <uses-sdk android:maxSdkVersion="8" android:targetSdkVersion="8" android:minSdkVersion="8"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application android:icon="@drawable/icon" android:label="@string/app_name">
        <activity android:name="jason.kang.reader.MainActivity"
                  android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity 
        	android:name="jason.kang.reader.HomeActivity"
        	android:theme="@android:style/Theme.NoTitleBar"/>
         <activity 
        	android:name="jason.kang.reader.NewsActivity"
        	android:theme="@android:style/Theme.NoTitleBar"/>
         <activity 
        	android:name="jason.kang.reader.MyInfoActivity"
        	android:theme="@android:style/Theme.NoTitleBar"/>
         <activity 
        	android:name="jason.kang.reader.SearchActivity"
        	android:theme="@android:style/Theme.NoTitleBar"/>
         <activity 
        	android:name="jason.kang.reader.MoreActivity"
        	android:theme="@android:style/Theme.NoTitleBar"/>
    </application>
</manifest>